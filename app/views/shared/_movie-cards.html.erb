<div class="row">
  <div class="col-8">
    <div class="movie-cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="movie-card" data-movie-card="<%= bookmark.to_json(include: {movie: {include: :lists }}) %>" >
          <div class="movie-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path bookmark.movie.poster_url , alt: "alttext" %>)">
              <div class="card-rating">
                <%= link_to bookmark_path(bookmark), method: :delete,
                      data: { confirm: "Are you sure?" } do %>
                  <i id="add-button" class="far fa-minus-square"></i>
                <% end %>
                <div class="rating-design">
                  <%= bookmark.movie.rating %>
                </div>

              </div>
          </div>
          <div class="movie-card-info">
              <h4><strong><%= bookmark.movie.title%></strong></h4>
              <p><%= bookmark.movie.overview %></p>
          </div>
          <div class="list-tags">
            <% bookmark.movie.lists.each do |list| %>
              <div class="list-tag-btn">
                <%= link_to "#{list.name}",list_path(list)  %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-4 color-border" >
    <div class="modal-card">
      <h1 class="list-page-links">Select A Movie...</h1>

    </div>
  </div>

