<div class="row">
  <div class="col-8">
    <div class="movie-cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="movie-card">
          <div class="movie-card-img">
            <%= image_tag bookmark.movie.poster_url , alt: "alttext" %>
            <%= link_to "Remove", bookmark_path(bookmark), method: :delete,
                  data: { confirm: "Are you sure?" }, class: "m-2 remove" %>
          </div>
          <div class="movie-card-info">
            <p><%= bookmark.movie.title%> </p>
            <p><%= bookmark.movie.rating %> </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-4">

  </div>
</div>
