<div>
   <%= render "banner" %>
</div>
<div class="container list-cards">
  <div class="row">
    <h1 style="color:white;">My Lists > </h1>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div id="list-card" class="col-6 my-3">
        <%= link_to list_path(list) do %>
          <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1334&q=80') %>)">
             <h1><%= list.name %></h1>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
