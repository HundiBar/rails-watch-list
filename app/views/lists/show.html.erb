
<div class="container list-title">
  <div class="list-page-links my-3">
    <h1><%=@list.name%> List </h1>
    <%= link_to new_list_bookmark_path(@list) do %>
      <i class="far fa-plus-square"></i>
    <% end %>
  </div>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Product name</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
  </div>
  </div>
  <% @list.bookmarks.each do |bookmark| %>
    <div>
      <p><%= bookmark.movie.title%> </p>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.movie.rating %> </p>
      <%= image_tag bookmark.movie.poster_url , alt: "alttext" %>
      <%= link_to "Remove", bookmark_path(bookmark), method: :delete,
              data: { confirm: "Are you sure?" }, class: "m-2 remove" %>
    </div>
  <% end %>
  <% if @list.photo.attached? %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
    <p style="color:white;">no photo</p>
  <% end %>

</div>
